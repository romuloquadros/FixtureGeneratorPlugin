<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="FixtureGeneratorPlugin.commands.category">
      </category>
      <command
            name="Fixture Generator"
            categoryId="FixtureGeneratorPlugin.commands.category"
            id="FixtureGeneratorPlugin.commands.sampleCommand">
      </command>
   </extension>
   <extension point="org.eclipse.ui.handlers">
      <handler
            commandId="FixtureGeneratorPlugin.commands.sampleCommand"
            class="fixturegeneratorplugin.handlers.FixtureGeneratorHandler">
      </handler>
   </extension>
    <extension point="org.eclipse.ui.menus">
      <menuContribution locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
            <command
                  commandId="FixtureGeneratorPlugin.commands.sampleCommand"
                  id="TestPopupMenu.menus.sampleCommand"
                  mnemonic="G">
                    <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*.java" />
				             </adapt>
				            </iterate>
				           </with>
         			</visibleWhen>
            </command>
      </menuContribution>
   </extension>
</plugin>
